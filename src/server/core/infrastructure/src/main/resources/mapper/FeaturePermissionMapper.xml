<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mayanshe.scrmstd.infrastructure.persistence.mapper.FeaturePermissionMapper">
    <!-- Saas功能点关联权限(feature_permissions)表映射 -->

    <insert id="batchInsert">
        INSERT INTO feature_permissions (feature_id, permission_id)
        VALUES
        <foreach collection="permissionIds" item="permissionId" separator=",">
            (#{featureId}, #{permissionId})
        </foreach>
    </insert>

    <delete id="deleteByFeatureId">
        DELETE
        FROM feature_permissions
        WHERE feature_id = #{featureId}
    </delete>
</mapper>