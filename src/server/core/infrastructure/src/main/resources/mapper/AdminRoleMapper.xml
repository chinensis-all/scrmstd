<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mayanshe.scrmstd.infrastructure.persistence.mapper.AdminRoleMapper">
    <!-- 管理员角色(admin_roles)表映射 -->
    
    <insert id="insert" parameterType="AdminRolePo" useGeneratedKeys="false">
        INSERT INTO admin_roles (admin_id, role_id)
        VALUES (#{adminId}, #{roleId})
    </insert>

    <insert id="batchInsert"  useGeneratedKeys="false">
        INSERT INTO admin_roles (admin_id, role_id)
        VALUES
        <foreach item="roleId" collection="roleIds" separator=",">
            (#{adminId}, #{roleId})
        </foreach>
    </insert>

    <delete id="deleteByAdminId" parameterType="Long">
        DELETE FROM admin_roles
        WHERE admin_id = #{adminId}
    </delete>
</mapper>
