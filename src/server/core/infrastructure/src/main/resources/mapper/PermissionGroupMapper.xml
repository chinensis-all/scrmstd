<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mayanshe.scrmstd.infrastructure.persistence.mapper.PermissionGroupMapper">
    <!-- 权限组(permission_groups)表映射 -->

    <sql id="condition">
        <where>
            <if test="id != null">
                AND id = #{id}
            </if>
            <if test="groupName != null">
                AND group_name = #{groupName}
            </if>
            <if test="displayName != null">
                AND display_name = #{displayName}
            </if>
            <if test="keywords != null">
                AND (group_name LIKE CONCAT('%', #{keywords}, '%')
                     OR display_name LIKE CONCAT('%', #{keywords}, '%'))
            </if>
        </where>
    </sql>

    <select id="findIdByCondition" parameterType="Map" resultType="Long">
        SELECT id
        FROM permission_groups
        <include refid="condition"/>
        <if test="orderBy != null">
            ORDER BY ${orderBy}
        </if>
        <if test="limit != null">
            LIMIT #{limit}
        </if>
        <if test="offset != null">
            OFFSET #{offset}
        </if>
    </select>

    <select id="count" parameterType="Map" resultType="Long">
        SELECT count(*)
        FROM permission_groups
        <include refid="condition"/>
    </select>
</mapper>
